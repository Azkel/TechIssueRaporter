<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Web</title>
    <link rel="stylesheet" href="https://unpkg.com/purecss@1.0.0/build/pure-min.css" integrity="sha384-nn4HPE8lTHyVtfCBi5yW9d20FjT8BJwUXyWZT9InLYax14RDjBj46LmSztkmNP9w" crossorigin="anonymous">
    <link rel="stylesheet" href="https://unpkg.com/purecss@1.0.0/build/grids-responsive-min.css">
    <environment include="Development">
        <link rel="stylesheet" href="~/css/site.css" />
    </environment>
    <environment exclude="Development">
        <link rel="stylesheet" href="~/css/site.min.css" asp-append-version="true" />
    </environment>
</head>
<body>
    <div class="header">
        <div class="pure-menu pure-menu-horizontal pure-menu-fixed">
            <a href="~/" class="pure-menu-heading">Tech Issue Raporter - TIR</a>
                @await Html.PartialAsync("_LoginPartial")
        </div>
    </div>
                
           
    <div class="content-wrapper">
        @RenderBody()
        <hr />
        <footer>
            <p style="text-align: center;">&copy; 2018 - Michał 'Azkel' Smyk</p>
        </footer>
    </div>

    <environment include="Development">
       
        <script src="~/lib/signalr/signalr-client-1.0.0-alpha2-final.js"></script>
        <script src="~/js/site.js" asp-append-version="true"></script>
    </environment>
    <environment exclude="Development">
        <script src="~/lib/signalr/signalr-client-1.0.0-alpha2-final.js"></script>
        <script src="~/js/site.min.js" asp-append-version="true"></script>
    </environment>
    @RenderSection("Scripts", required: false)
</body>
</html>
