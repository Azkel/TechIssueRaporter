@using Microsoft.AspNetCore.Identity
@using Web.Models

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@if (SignInManager.IsSignedIn(User))
{

        <ul class="pure-menu-list">

            <li class="pure-menu-item">
                <a class="pure-menu-link" asp-area="" asp-controller="Manage" asp-action="Index" title="Manage">Hello @UserManager.GetUserName(User)!</a>
            </li>
            <li class="pure-menu-item">
                <form asp-area="" asp-controller="Account" asp-action="Logout" method="post" id="logoutForm" class="navbar-right">
                    <button type="submit" class="pure-button">Log out</button>
                </form>
            </li>
        </ul>
  
}
else
{
    <ul class="pure-menu-list">
        <li class="pure-menu-item"><a class="pure-menu-link" asp-area="" asp-controller="Account" asp-action="Register">Register</a></li>
        <li class="pure-menu-item"><a class="pure-menu-link" asp-area="" asp-controller="Account" asp-action="Login">Log in</a></li>
    </ul>
}
