
@{
    ViewData["Title"] = "Create new support request";
}

@model Web.Models.IssueModels.NewIssueFormModel

<form asp-action="CreateIssue" asp-controller="Issue" method="post" class="pure-form pure-form-stacked">
    <fieldset>
        <legend>Add new support request</legend>
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="pure-control-group">
            <label asp-for="Description">Description of an issue</label>
            <textarea asp-for="Description" class="pure-input" style="width: 100%;" rows="8"> </textarea>
            <span asp-validation-for="Description" style="color: red;"></span>
            <p>
            Try to write "what" is wrong, not only "please come to help me with not-working equipment" - that kind of issues will be ignored.
            </p>
        </div>
        <div class="form-group">
            <input type="submit" value="Send" class="btn btn-default" />
        </div>
    </fieldset>
</form>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
